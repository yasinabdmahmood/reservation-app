<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin • Reservations</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Reservation App — Admin</a>
    </div>
  </nav>

  <div class="container py-4">
    <div class="card shadow-sm">
      <div class="card-header fw-bold">Find Reservation</div>
      <div class="card-body">
        <div class="row g-3 align-items-end">
          <div class="col-md-4">
            <label class="form-label">Center</label>
            <select id="center" class="form-select" required>
              <option value="">-- Select Center --</option>
              <% centers.forEach(c => { %>
                <option value="<%= c.id %>"><%= c.name %></option>
              <% }); %>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Date</label>
            <input id="date" type="date" class="form-control" required />
          </div>
          <div class="col-md-4">
            <button id="btnFind" class="btn btn-primary">Find Reservation</button>
          </div>
        </div>

        <div id="spinner" class="d-none text-center my-3">
          <div class="spinner-border" role="status" aria-hidden="true"></div>
          <div class="small text-muted mt-2">Loading…</div>
        </div>

        <div id="result" class="d-none mt-4">
          <div id="alert" class="alert" role="alert"></div>

          <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between"><span>Date</span> <strong id="rDate">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>Center</span> <strong id="rCenter">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>Reservation ID</span> <strong id="rId">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>Capacity</span> <strong id="rCapacity">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>Reserved</span> <strong id="rReserved">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>Available</span> <strong id="rAvailable">—</strong></li>
          </ul>

          <a id="btnDownload" href="#" class="btn btn-success d-none">
            ⬇️ Download Students (Excel)
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const centerEl = document.getElementById('center');
    const dateEl = document.getElementById('date');
    const btnFind = document.getElementById('btnFind');

    const spinner = document.getElementById('spinner');
    const result = document.getElementById('result');
    const alertBox = document.getElementById('alert');

    const rDate = document.getElementById('rDate');
    const rCenter = document.getElementById('rCenter');
    const rId = document.getElementById('rId');
    const rCapacity = document.getElementById('rCapacity');
    const rReserved = document.getElementById('rReserved');
    const rAvailable = document.getElementById('rAvailable');
    const btnDownload = document.getElementById('btnDownload');

    function setLoading(isLoading) {
      spinner.classList.toggle('d-none', !isLoading);
      btnFind.disabled = isLoading;
    }

    btnFind.addEventListener('click', async () => {
      const date = dateEl.value;
      const center_id = centerEl.value;

      result.classList.add('d-none');
      btnDownload.classList.add('d-none');
      if (!date || !center_id) {
        alert('Please select both date and center.');
        return;
      }

      setLoading(true);
      try {
        const qs = new URLSearchParams({ date, center_id });
        const resp = await fetch(`/admin/api/reservation?${qs.toString()}`);
        const data = await resp.json();
        setLoading(false);

        if (!data.ok) {
          alertBox.className = 'alert alert-warning';
          alertBox.textContent = data.error || 'No reservation found.';
          result.classList.remove('d-none');
          rDate.textContent = date;
          rCenter.textContent = centerEl.options[centerEl.selectedIndex].text;
          rId.textContent = '—';
          rCapacity.textContent = '—';
          rReserved.textContent = '—';
          rAvailable.textContent = '—';
          return;
        }

        const r = data.reservation;
        alertBox.className = 'alert alert-info';
        alertBox.textContent = 'Reservation found.';
        result.classList.remove('d-none');

        rDate.textContent = r.date;
        rCenter.textContent = r.center_name || ('#' + r.center_id);
        rId.textContent = r.id;
        rCapacity.textContent = r.capacity;
        rReserved.textContent = r.reserved;
        rAvailable.textContent = r.available;

        btnDownload.href = `/admin/reservations/${r.id}/download`;
        btnDownload.classList.remove('d-none');

      } catch (e) {
        setLoading(false);
        alertBox.className = 'alert alert-danger';
        alertBox.textContent = e.message || 'Failed to fetch reservation.';
        result.classList.remove('d-none');
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
