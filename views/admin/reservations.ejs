<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>المدير • الحجوزات</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container d-flex flex-row justify-content-around">
      <a class="navbar-brand" href="/">تطبيق الحجز — المدير</a>
      <span class="navbar-text ms-auto">رئاسة جامعة كركوك - مركز الحاسبة</span>
    </div>
  </nav>

  <div class="container py-4">
    <div class="card shadow-sm">
      <div class="card-header fw-bold">البحث عن حجز</div>
      <div class="card-body">
        <div class="row g-3 align-items-end">
          <div class="col-md-4">
            <label class="form-label">المركز</label>
            <select id="center" class="form-select" required>
              <option value="">-- اختر المركز --</option>
              <% centers.forEach(c => { %>
                <option value="<%= c.id %>"><%= c.name %></option>
              <% }); %>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">التاريخ</label>
            <input id="date" type="date" class="form-control" required />
          </div>
          <div class="col-md-4">
            <button id="btnFind" class="btn btn-primary">البحث عن حجز</button>
          </div>
        </div>

        <div id="spinner" class="d-none text-center my-3">
          <div class="spinner-border" role="status" aria-hidden="true"></div>
          <div class="small text-muted mt-2">جاري التحميل...</div>
        </div>

        <div id="result" class="d-none mt-4">
          <div id="alert" class="alert" role="alert"></div>

          <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between"><span>التاريخ</span> <strong id="rDate">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>المركز</span> <strong id="rCenter">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>رقم الحجز</span> <strong id="rId">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>السعة</span> <strong id="rCapacity">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>المحجوز</span> <strong id="rReserved">—</strong></li>
            <li class="list-group-item d-flex justify-content-between"><span>المتاحة</span> <strong id="rAvailable">—</strong></li>
          </ul>

          <a id="btnDownload" href="#" class="btn btn-success d-none">
            ⬇️ تنزيل الطلاب (Excel)
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    const centerEl = document.getElementById('center');
    const dateEl = document.getElementById('date');
    const btnFind = document.getElementById('btnFind');

    const spinner = document.getElementById('spinner');
    const result = document.getElementById('result');
    const alertBox = document.getElementById('alert');

    const rDate = document.getElementById('rDate');
    const rCenter = document.getElementById('rCenter');
    const rId = document.getElementById('rId');
    const rCapacity = document.getElementById('rCapacity');
    const rReserved = document.getElementById('rReserved');
    const rAvailable = document.getElementById('rAvailable');
    const btnDownload = document.getElementById('btnDownload');

    function setLoading(isLoading) {
      spinner.classList.toggle('d-none', !isLoading);
      btnFind.disabled = isLoading;
    }

    btnFind.addEventListener('click', async () => {
      const date = dateEl.value;
      const center_id = centerEl.value;

      result.classList.add('d-none');
      btnDownload.classList.add('d-none');
      if (!date || !center_id) {
        alert('يرجى اختيار المركز والتاريخ.');
        return;
      }

      setLoading(true);
      try {
        const qs = new URLSearchParams({ date, center_id });
        const resp = await fetch(`/admin/api/reservation?${qs.toString()}`);
        const data = await resp.json();
        setLoading(false);

        if (!data.ok) {
          alertBox.className = 'alert alert-warning';
          alertBox.textContent = data.error || 'لم يتم العثور على الحجز.';
          result.classList.remove('d-none');
          rDate.textContent = date;
          rCenter.textContent = centerEl.options[centerEl.selectedIndex].text;
          rId.textContent = '—';
          rCapacity.textContent = '—';
          rReserved.textContent = '—';
          rAvailable.textContent = '—';
          return;
        }

        const r = data.reservation;
        alertBox.className = 'alert alert-info';
        alertBox.textContent = 'تم العثور على الحجز.';
        result.classList.remove('d-none');

        rDate.textContent = r.date;
        rCenter.textContent = r.center_name || ('#' + r.center_id);
        rId.textContent = r.id;
        rCapacity.textContent = r.capacity;
        rReserved.textContent = r.reserved;
        rAvailable.textContent = r.available;

        btnDownload.href = `/admin/reservations/${r.id}/download`;
        btnDownload.classList.remove('d-none');

      } catch (e) {
        setLoading(false);
        alertBox.className = 'alert alert-danger';
        alertBox.textContent = e.message || 'فشل في جلب الحجز.';
        result.classList.remove('d-none');
      }
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
