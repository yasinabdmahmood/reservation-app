<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Reservation Status</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Reservation App</a>
    </div>
  </nav>

  <div class="container py-4">
    <!-- Message -->
    <div class="alert alert-<%= messageType %>">
      <%= message %>
    </div>

    <!-- Student info -->
    <div class="card shadow-sm mb-3">
      <div class="card-header fw-bold">Student Information</div>
      <div class="card-body">
        <div class="row gy-2">
          <div class="col-md-4"><strong>Name:</strong> <%= student.name %></div>
          <div class="col-md-4"><strong>Phone:</strong> <%= student.phone_number %></div>
          <div class="col-md-4"><strong>ID Number:</strong> <%= student.id_number %></div>
        </div>
      </div>
    </div>

    <!-- Reservation details -->
    <div class="card shadow-sm mb-4">
      <div class="card-header fw-bold">Reservation Details</div>
      <div class="card-body">
        <div class="row gy-2">
          <div class="col-md-3"><strong>Date:</strong> <%= reservation.date %></div>
          <div class="col-md-3"><strong>Center:</strong> <%= reservation.center_name %></div>
          <div class="col-md-3"><strong>Reservation ID:</strong> <%= reservation.id %></div>
          <div class="col-md-3"><strong>Capacity:</strong> <%= reservation.capacity %></div>
          <div class="col-md-3"><strong>Reserved:</strong> <%= reservation.reserved %></div>
          <div class="col-md-3"><strong>Available:</strong> <%= reservation.available %></div>
        </div>
      </div>
    </div>

    <!-- Back button -->
    <a href="/students/new" class="btn btn-secondary">‚Üê Back to New Reservation</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
